<h1>My site</h1>
<p>This is my site</p>

<%= link_to "Login", new_user_session_path %>
<%= link_to "Logout", destroy_user_session_path, method: :delete %>
<% if !current_user.nil? %>
	<%= link_to "Profile"%>
<% end %>
<hr>
<%= link_to "Create new post", new_post_path %>
<% if @posts == [] %>
	<p>Create new post</p>
	<% else %>
		<% @posts.each do |post|%>
		<p>User <%= post.user.email %> write: %>
		<b><%= post.title %></b><br />
		<%= post.body %></p>
		<p><%= link_to "Read More", post_path(post.id) %></p>
	<% end %>
<% end %>
	